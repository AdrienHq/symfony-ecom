{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <div class="separator"></div>
        <h1 class="table-title">Nos recettes contenant l'ingrédient : {{ category.name }}</h1>
        <div class="separator"></div>
        {#        car-container #}
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Recette</th>
                        <th>Temps de préparation</th>
                        <th>Notation</th>
                        <th>Voir la recette</th>
                    </tr>
                </thead>
                <tbody>
                {% for recipe in recipes %}
                    <tr>
                        <td>{{ recipe.name }}</td>
                        <td>{{ recipe.duration }}</td>
                        <td>{{ recipe.notation | default(0) }}</td>
                        <td><a href="{{ path('recipe.detail', {id: recipe.id, slug: recipe.slug } ) }}"
                               class="table-button">Lire
                                la
                                suite</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
