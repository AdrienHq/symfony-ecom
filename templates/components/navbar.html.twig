{% block navbar %}
    <div class="separator"></div>
    <nav class="navbar navbar-expand-lg navbar-light">
        <!-- Left-aligned content -->
        <div class="col-md-2">
            <a class="navbar-brand ms-5" href="{{ path('index') }}">ADHD Kitchen</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>

        <!-- Center-aligned content -->
        <div class="collapse navbar-collapse col-md-8 justify-content-center" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item {{ app.request.attributes.get('_route') == 'recipes.list' ? 'active' : '' }}">
                    <a class="nav-link" href="{{ path('recipes.list') }}">Recettes</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownCategories" role="button"
                       data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Cat√©gories</a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownCategories">
                        {{ render(controller('App\\Controller\\HomeController::renderCategoriesFragmentNavbar')) }}
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownCourses" role="button"
                       data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Type de repas</a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownCourses">
                        {{ render(controller('App\\Controller\\HomeController::renderCoursesFragmentNavbar')) }}
                    </div>
                </li>
            </ul>
        </div>

        <!-- Right-aligned content -->
        <div class="collapse navbar-collapse col-md-2 justify-content-end" id="navbarSupportedContent">
            <ul class="navbar-nav me-5">
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin') }}">Admin</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('contact') }}">Contact</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_USER') %}
                    <li class="nav-item">
                        <a class="btn btn-danger" href="{{ path('app_logout') }}">Logout</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="btn btn-success" href="{{ path('app_login') }}">Login</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </nav>
    <div class="separator"></div>
{% endblock %}
