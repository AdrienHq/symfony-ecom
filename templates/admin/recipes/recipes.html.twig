{% extends "/admin/admin.html.twig" %}

{% block body %}
    <div>


        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Creation Date</th>
            </tr>
            </thead>
            <tbody>
            {% for recipe in recipes %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td>{{ recipe.getId() }}</td>
                    <td>{{ recipe.getName() }}</td>
                    <td>{{ recipe.getCreatedAt()|date("d/m/Y") }}</td>
                </tr>
                <li>
                    <a href="{{ path('recipe.detail', {id: recipe.id, slug: recipe.slug } ) }}">{{ recipe.getName() }}</a>
                </li>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}