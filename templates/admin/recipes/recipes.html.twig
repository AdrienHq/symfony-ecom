{% extends "/admin/admin.html.twig" %}

{% block body %}
    <div>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Creation Date</th>
            </tr>
            </thead>
            <tbody>
            {% for recipe in recipes %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td>{{ recipe.getId() }}</td>
                    <td>{{ recipe.getName() }}</td>
                    <td>{{ recipe.getCreatedAt()|date("d/m/Y") }}</td>
                    <td>
                        <a class="btn btn-primary"
                           href="{{ path('recipe.detail', {id: recipe.id, slug: recipe.slug } ) }}">Link to the
                            recipe</a>
                    </td>
                    <td>
                        <a class="btn btn-warning" href="{{ path('admin.recipes.edit', {id: recipe.id} ) }}">Edit</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" href="{{ path('admin.recipes.edit', {id: recipe.id} ) }}">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}