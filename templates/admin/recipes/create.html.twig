{% extends "/admin/admin.html.twig" %}

{% block title "Create a recipe!" %}

{% block body %}
    <h1>Create a new recipe</h1>

    <div class="form-inline">
        {{ form_start(form) }}

        <div class="form-group">
            {{ form_row(form.name) }}
        </div>
        <div class="form-group">
            {{ form_row(form.thumbnailFile) }}
        </div>
        <div class="form-group">
            {{ form_label(form.description) }}
            <div id="quill-description" class="quill-editor"></div>
            {{ form_widget(form.description, { 'attr': {'style': 'display:none'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.questions) }}
            <div id="quill-questions" class="quill-editor"></div>
            {{ form_widget(form.questions, { 'attr': {'style': 'display:none'} }) }}
        </div>
        <div class="form-group">
            {{ form_row(form.duration) }}
        </div>
        <div class="form-group">
            {{ form_row(form.course) }}
        </div>
        <div class="form-group">
            {{ form_row(form.category) }}
        </div>
        <div class="form-group">
            {{ form_row(form.slug) }}
        </div>
        <div class="form-group">
            <div class="form-field">
                {{ form_label(form.quantities) }}
                {{ form_widget(form.quantities) }}
                {{ form_errors(form.quantities) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_row(form.vegetarian) }}
        </div>
        <div class="form-group">
            {{ form_row(form.save) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
