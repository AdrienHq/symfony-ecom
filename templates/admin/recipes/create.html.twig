{% extends "/admin/admin.html.twig" %}

{% block title "Create a recipe !" %}

{% block body %}
    <h1>Create a new recipe</h1>
    {#    {{ form_start(form) }} #}
    {#    {{ form_end(form) }} #}


    <div class="form-inline">
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.name) }}
        </div>
        <div class="form-group">
            {{ form_row(form.thumbnailFile) }}
        </div>
        <div class="form-group">
            {{ form_row(form.content) }}
        </div>
        <div class="form-group">
            {{ form_row(form.description) }}
        </div>
        <div class="form-group">
            {{ form_row(form.questions) }}
        </div>
        <div class="form-group">
            {{ form_row(form.recipeSteps) }}
        </div>
        <div class="form-group">
            {{ form_row(form.duration) }}
        </div>
        <div class="form-group">
            {{ form_row(form.course) }}
        </div>
        <div class="form-group">
            {{ form_row(form.category) }}
        </div>
        <div class="form-group">
            {{ form_row(form.slug) }}
        </div>

        <div class="form-group">
            <div class="form-field">
                {{ form_label(form.quantities) }}
                {{ form_widget(form.quantities) }}
                {{ form_errors(form.quantities) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_row(form.save) }}
        </div>
        {{ form_end(form) }}
    </div>


{% endblock %}
