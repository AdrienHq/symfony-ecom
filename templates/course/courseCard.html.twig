<div class="card">
    <img
            src="{{ asset('images/recipes/screenshot-from-2024-02-20-16-19-52-65e731687fe2a542498343.png') }}"
            alt=""
            class="card-img-top"
    >
    <div class="card-body">
        <h2 class="card-title">{{ recipe.name|default("") }}</h2>
        <div class="card-title">
            <h4 class="card-title" style="font-size: 1.5rem; color: firebrick">
                {% if (recipe.duration // 60) > 0 %}
                    {{ (recipe.duration // 60) ~ ' hour ' }}
                {% endif %}
                {{ (recipe.duration % 60) ~ ' minutes' }}
            </h4>
        </div>
        <p class="card-text" class="mt-3">
            {{ recipe.description|default("")|slice(0, 120) }}{% if recipe.description|length > 120 %} ...{% endif %}
        </p>
        <div>
            {% for category in recipe.category %}
                <em class="text-muted text-primary fst-italic">#{{ category }}</em>
            {% endfor %}
        </div>
        <div class="border-top text-end" style="background: none;">
            <div class="mt-3">
                <a href="{{ path('recipe.detail', {id: recipe.id, slug: recipe.slug } ) }}" class="btn btn-primary">
                    Lire la suite
                </a>
            </div>
        </div>
    </div>
</div>