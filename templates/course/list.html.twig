{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <h1 class="pt-3 pb-5 text-center mt-40" style="font-size: 45px;">Our recipes for the {{ course.name }}</h1>
        <div class="row">
            <div class="col-md-3">
                {% include '/course/_filter.html.twig' with {form: form } only %}
            </div>
            <div class="col-md-9">
                <div class="grid">
                    {% for recipe in recipes %}
                        {% include '/course/courseCard.html.twig' with {recipe: recipe } only %}
                    {% endfor %}
                </div>
                <div class="pagination">
                    {{ knp_pagination_render(recipes) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
